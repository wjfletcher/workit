<div class="image-background">
<div class="row data text-center">
<% if !@allworkouts.nil? %>
<h4>select exercise to view progress</h4>
<div>
<%= form_for (data_path), method: :get do |f| %>
  <div class="field">
    <%= f.label :exercise_id %>
    <%= f.collection_select :exercise_id, @exercises,:id,:name %>
  </div>
</div>
  <div>
  <%= f.submit "Update", class: "button" %>
  </div>
<% end %>
<% else %>
  <h3>You have no workouts! get on that!</h3>
<% end %>

<% if @exercise.nil? %>
  <% title = "Pick an exercise above" %>
<% else %>
  <% title = @exercise.first.name %>
<% end %>


<div class="chart callout">
<%= line_chart @data, title: title, xtitle: "Date", ytitle: "Weight"%>
</div>
</div>
</div>
