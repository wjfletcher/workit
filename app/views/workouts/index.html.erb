<div class="image-background">
<div class="top-padding row text-center">
<h1 class="black-ops">Your Workouts</h1>

<div id="app"></div>

<% @workouts.each do |date, workout| %>
  <div class="callout workouts">
  <h4><%= date.strftime("%m/%d/%Y") %></h4>
  <% workout.each do |exercise| %>
  <%= link_to "#{exercise.exercise.name}", workouts_path %>
  <%= exercise.sets %> sets X <%= exercise.reps %> reps X <%= exercise.weight %> lbs
  <%= link_to "", workout_path(id: exercise.id), method: :delete, form_class: "deletebutton", class: "fa fa-trash fa-lg", data: {confirm: 'Are you sure you want to delete this workout?'} %>
  <%= link_to "", edit_workout_path(exercise), class: "fa fa-pencil-square fa-lg" %>
  <br>
  <% end %>
  </div>
  <br>
<% end %>




<br><br>
<% if current_user.identity_for("fitbit") %>
<div id="fitbit"></div>
<% end %>
</div>
</div>
