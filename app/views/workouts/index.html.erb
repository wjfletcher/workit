<h1>Your Workouts</h1>
<% if @workouts.empty? %>
  You haven't added any workouts yet
<% else %>
  <% @workouts.each do |workout| %>
    <%= workout.exercise.name %>
    <%= workout.date %>
  <% end %>
<% end %>
<br>


<%  date = 1.day.from_now(@workouts.first.date.to_date) rescue nil # increment the day
  @workouts.each do |workout|
    if date > workout.date.to_date
      date = workout.date.to_date %>
      <div style="background: #81BEF7;margin-top: 5px; margin-bottom: 5px;" class="rounded"><b><span style="padding: 5px"><%=h date %></span></b></div>
    <%end%>

    <p>

       <%= link_to "#{workout.exercise.name}", workouts_path %><br>
      
    </p>

<%  end # end for items_each%>


<%= link_to 'Add a workout', new_workout_path %>
